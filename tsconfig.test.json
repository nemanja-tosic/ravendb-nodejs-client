{
  "version": "2.9.2",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "pretty": true,
    "outDir": ".test",
    "lib": [ "ES2022" ],
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/moment",
      "src/Types"
    ],
    "types": [
      "mocha",
      "node",
      "stream-json"
    ]
  },
  "include": [
    "test",
    "./src/Types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
